<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:backgroundTint="@color/colorDarkBlue"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/txtInsta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/BigTextTheme"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="Instagram аккаунттар" />

    <Button
        android:id="@+id/btnQory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtInsta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        android:background="@drawable/skin_audio"
        android:backgroundTint="@color/colorDarkBlueForItem"
        android:textColor="#ffffff"
        android:text=" @aidyn_nury_qory"
        android:fontFamily="@font/bold"/>

    <Button
        android:id="@+id/btnNatije"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnQory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:elevation="4dp"
        android:background="@drawable/skin_audio"
        android:backgroundTint="@color/colorDarkBlueForItem"
        android:textColor="#ffffff"
        android:text=" @aidyn_nury_natijeleri"
        android:fontFamily="@font/bold"/>

    <Button
        android:id="@+id/btnAidyn_nury"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnNatije"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:elevation="4dp"
        android:background="@drawable/skin_audio"
        android:backgroundTint="@color/colorDarkBlueForItem"
        android:textColor="#ffffff"
        android:text=" @aidyn_nury"
        android:fontFamily="@font/bold"/>

    <Button
        android:id="@+id/btnaaa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnAidyn_nury"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:elevation="4dp"
        android:background="@drawable/skin_audio"
        android:backgroundTint="@color/colorDarkBlueForItem"
        android:textColor="#ffffff"
        android:text=" @aidyn_nury_asxana"
        android:fontFamily="@font/bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>