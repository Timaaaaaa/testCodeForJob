<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:id="@+id/executerView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/skin_pack"
    android:backgroundTint="@color/colorDarkBlueForItem"
    android:layout_margin="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/no_image"
            android:scaleType="fitXY"
            android:background="@drawable/skin_image"/>

        <TextView
            android:id="@+id/txtLessonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgKorona"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:text="cts_name_example cts_sasdasa sasdasd"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:id="@+id/txtLessonAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtLessonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:text="@string/label_subjects_name_example"
            android:textSize="15sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:id="@+id/txtLessonIndex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtLessonAuthor"
            app:layout_constraintStart_toEndOf="@id/imgBook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="24dp"
            android:text="@string/label_subjects_lesson"
            android:textSize="14sp"
            android:fontFamily="@font/bold"
            android:textColor="#B6BCC3"
            />

        <View
            android:id="@+id/viewSelection"
            android:layout_width="3dp"
            android:layout_height="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgItem"
            app:layout_constraintBottom_toBottomOf="parent"

            android:background="@color/colorGold"
            />

        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="20dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toTopOf="@id/txtLessonIndex"
            app:layout_constraintBottom_toBottomOf="@id/txtLessonIndex"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/icon_65"/>

        <ImageView
            android:id="@+id/imgKorona"
            android:layout_width="11dp"
            android:layout_height="6dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/icon_01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgItem" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>