        <androidx.viewpager.widget.ViewPager
            android:id="@+id/imgInfo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/txtInfoDate"
            android:layout_margin="24dp"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/videoInfo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/imgInfo"
            android:layout_margin="24dp"
            android:visibility="gone"/>


        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ci_drawable="@drawable/skin_indicator"
            app:layout_constraintTop_toBottomOf="@+id/videoInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/txtLessonDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/circle"
            app:layout_constraintStart_toStartOf="@id/imgInfo"
            app:layout_constraintEnd_toEndOf="@id/imgInfo"
