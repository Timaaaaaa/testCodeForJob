<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/skin_dialog"
    android:orientation="vertical"
    android:paddingTop="44dp"
    android:paddingBottom="44dp"
    android:layout_gravity="center"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintInfo"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


    <TextView
        android:id="@+id/txtLessonTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        style="@style/BigTextTheme"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:text="@string/dialog_lesson_title" />

    <TextView
        android:id="@+id/txtLessonPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtLessonTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="22sp"
        android:textColor="@color/colorGold"
        android:text="2 000 ₸" />

    <View
        android:id="@+id/line"
        android:layout_width="56dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtLessonPrice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="#FFFFFF"
        android:alpha="0.1"/>

    <TextView
        android:id="@+id/txtLessonDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:alpha="0.56"
        android:text="Айнұр Тұрсынбаева 1977 жылы бұрынғы Семей облысы, Ақсуат ауданы, Көкжыра ауылында (қазіргі Шығыс Қазақстан облысы Тарбағатай ауданына қарасты ауылдардың бірі) дүниеге келген." />

    <Button
        android:id="@+id/btnBuyLesson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtLessonDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="60dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/skin_pack"
        android:backgroundTint="@color/colorGold"
        android:textSize="16sp"
        android:textColor="#0C2136"
        android:text="@string/dialog_lesson_buy_action"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>